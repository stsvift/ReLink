{
  "$schema": "https://schema.tauri.app/config/2.0.0",
  "productName": "ReLink",
  "version": "0.2.2",
  "identifier": "com.relink.app",
  "build": {
    "frontendDist": "../src"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "ReLink",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/icon-light.png",
      "icons/icon-light.ico"
    ],
    "resources": [
      "target/bat_files/*"
    ],
    "createUpdaterArtifacts": true
  },
  "plugins": {
    "shell": {
      "open": true
    },
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEQ3OEQ4QUIzQzc1NzdGMDQKUldRRWYxZkhzNHFOMStEN1lpN0dNVGVFQlRuSCs3cGVuOGhNOFMvTVUzd2NHRXZ2N0krYlBTZjMK",
      "endpoints": [
        "https://raw.githubusercontent.com/stsvift/ReLink/refs/heads/main/latest.json"
      ]
    }
  }
}
